<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.recuperar.view.fragment_recuperar">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="28dp"
        >
        <TextView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_volver"
            android:layout_marginTop="37dp"

           ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="¿Olvido su contraseña?"
            android:textSize="30dp"
            android:layout_marginTop="36dp"
            android:textColor="#5D4395"

            ></TextView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su Correo electronico"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_email"
            android:layout_marginTop="28dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="317dp"
                android:layout_height="55dp"
                android:inputType="textEmailAddress"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Le enviaremos un mensaje para reestablecer su nueva contraseña"
            android:textSize="12dp"
            android:textColor="#676767"
            android:layout_marginTop="28dp"
        ></TextView>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:textStyle="bold"
            android:text="Enviar codigo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginTop="50dp"

            ></Button>


    </LinearLayout>
</FrameLayout>