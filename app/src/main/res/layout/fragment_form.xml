<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_form"
    android:orientation="vertical"
    tools:context=".presentation.form.view.fragment_form"
    android:minWidth="800dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="28dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu prestamo"
            android:textColor="@color/principal"
            android:textSize="25dp"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextNaturaleza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Naturaleza del evento"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="11dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/naturalezaedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"

            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero aproximado de usuarios"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/principal"
                android:layout_marginLeft="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageButton
                        android:id="@+id/btn_menos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_menos"

                        ></ImageButton>

                    <TextView
                        android:id="@+id/num_usuarios"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="@color/principal"
                        android:textStyle="bold"
                        android:textSize="21dp"
                        android:textAlignment="center"
                        ></TextView>

                    <ImageButton
                        android:id="@+id/btn_mas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_mas"

                        ></ImageButton>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/principal"
            app:strokeWidth="2dp"
            android:layout_marginTop="29dp"
            app:cardBackgroundColor="#E8DCFF"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dia,Hora y duración "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="16dp"

                    ></TextView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/principal"
                    app:strokeWidth="2dp"
                    android:background="#E8DCFF"

                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_date"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="14dp"
                        ></ImageView>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="56.3dp"
                        android:layout_marginTop="15dp"
                        android:text="Seleccione el dia"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/principal"

                        ></TextView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/principal"
                    app:strokeWidth="2dp"
                    android:background="#E8DCFF"

                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_time"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="14dp"
                        ></ImageView>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="56.3dp"
                        android:layout_marginTop="15dp"
                        android:text="Seleccione la hora"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/principal"

                        ></TextView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/principal"
                    app:strokeWidth="2dp"
                    android:background="#E8DCFF"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_time2"
                            android:layout_marginLeft="16.7dp"
                            android:layout_marginTop="14dp"
                            ></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="15dp"
                            android:text="Duración (Horas)"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/principal"

                            ></TextView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/principal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">


                                <ImageButton
                                    android:id="@+id/btn_menos1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_menos"
                                    ></ImageButton>

                                <TextView
                                    android:id="@+id/num_horas"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:text="1"
                                    android:textColor="@color/principal"
                                    android:textStyle="bold"
                                    android:textSize="21dp"
                                    android:textAlignment="center"
                                    ></TextView>

                                <ImageButton
                                    android:id="@+id/btn_mas1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_mas"

                                    ></ImageButton>

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <ProgressBar
            android:id="@+id/progressBar_solicitud"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:indeterminateDrawable="@drawable/progressbar"
            android:indeterminateDuration="@android:integer/config_longAnimTime"
            android:layout_marginTop="21dp"
            android:visibility="gone"></ProgressBar>

        <com.google.android.material.card.MaterialCardView

            android:id="@+id/button_enviarsolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/principal"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/textoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Enviar Solicitud"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="17dp"
                android:layout_margin="10dp"></TextView>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>