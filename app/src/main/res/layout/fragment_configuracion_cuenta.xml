<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.configuración_cuenta.view.FragmentConfiguracionCuenta">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="28dp"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIGURACIÓN"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/principal"
            android:textStyle="bold"
            ></TextView>


        <com.google.android.material.button.MaterialButton

            android:id="@+id/botoncambiarcorreo"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:padding="12dp"
            android:text="Cambia tu correo electronico"
            android:textAllCaps="false"
            android:textColor="@color/principal"
            android:textSize="14dp"
            app:cornerRadius="10dp"
            android:drawableRight="@drawable/ic_ir"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/principal"

            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton

            android:id="@+id/botoncambiarcontraseña"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:padding="12dp"
            android:text="Cambia tu contraseña"
            android:textColor="@color/principal"
            android:textSize="14dp"
            app:cornerRadius="10dp"
            android:drawableRight="@drawable/ic_ir"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableTint="@color/principal"
            android:textAllCaps="false"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botoncambiardatosper"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:padding="12dp"
            android:text="Cambia tus datos personales"
            android:textColor="@color/principal"
            android:textSize="14dp"
            app:cornerRadius="10dp"
            android:drawableRight="@drawable/ic_ir"
            android:drawableLeft="@drawable/ic_editar_datos"
            android:drawableTint="@color/principal"
            android:textAllCaps="false"

            ></com.google.android.material.button.MaterialButton>
    </LinearLayout>
</FrameLayout>