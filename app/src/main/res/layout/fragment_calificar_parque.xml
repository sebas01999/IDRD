<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.calificarParque.view.calificarParqueFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificaciones"
        android:textColor="@color/principal"
        android:textSize="25dp"
        android:layout_margin="17dp"></TextView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <Button
                   android:layout_width="100dp"
                   android:layout_height="50dp"
                   android:backgroundTint="#EBF5FB"
                   android:text="Todas"
                   android:textSize="12dp"
                   android:layout_margin="5dp"
                   android:textColor="#40BFFF"></Button>
               <Button
                   android:layout_width="62dp"
                   android:layout_height="50dp"
                   android:drawableLeft="@drawable/ic_estrellacalificar"
                   android:backgroundTint="@color/white"
                   android:text="1"
                   android:layout_margin="5dp"
                   android:textColor="@color/location_park"
                   ></Button>
               <Button
                   android:layout_width="62dp"
                   android:layout_height="50dp"
                   android:drawableLeft="@drawable/ic_estrellacalificar"
                   android:backgroundTint="@color/white"
                   android:text="2"
                   android:layout_margin="5dp"
                   android:textColor="@color/location_park"
                   ></Button>
               <Button
                   android:layout_width="62dp"
                   android:layout_height="50dp"
                   android:drawableLeft="@drawable/ic_estrellacalificar"
                   android:backgroundTint="@color/white"
                   android:text="3"
                   android:layout_margin="5dp"
                   android:textColor="@color/location_park"
                   ></Button>
               <Button
                   android:layout_width="62dp"
                   android:layout_height="50dp"
                   android:drawableLeft="@drawable/ic_estrellacalificar"
                   android:backgroundTint="@color/white"
                   android:text="4"
                   android:layout_margin="5dp"
                   android:textColor="@color/location_park"
                   ></Button>
               <Button
                   android:layout_width="62dp"
                   android:layout_height="50dp"
                   android:drawableLeft="@drawable/ic_estrellacalificar"
                   android:backgroundTint="@color/white"
                   android:text="5"
                   android:layout_margin="5dp"
                   android:textColor="@color/location_park"
                   ></Button>
           </LinearLayout>

        </HorizontalScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/calificar"
            android:layout_marginBottom="-32dp"></androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.card.MaterialCardView

            android:id="@+id/calificar"
            android:layout_width="154dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:backgroundTint="@color/principal"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Calificar"
                android:textColor="@color/white"
                android:textSize="14dp"></TextView>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</LinearLayout>